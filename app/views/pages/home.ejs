<div class="d-flex flex-column gap-4">
    <% data.forEach(item => { %>
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="d-flex gap-3 align-items-center">
                        <img src="data:image/png;base64,<%= item.user.avatar %>" alt="Avatar" class="rounded-circle"
                             width="30"
                             height="30">
                        <p class="mb-0"><%= item.user.email %></p>
                    </div>
                    <% if (currentUser && currentUser.email === item.user.email) { %>
                        <div class="d-flex gap-2 align-items-center">
                            <a href="/edit-post/<%= item._id %>" class="btn btn-outline-secondary"
                               data-bs-toggle="tooltip"
                               title="Edit">
                                <i class="bi bi-pen"></i>
                            </a>
                            <form method="POST" action="/delete-post/<%= item._id %>">
                                <button type="submit" class="btn btn-outline-danger" data-bs-toggle="tooltip"
                                        title="Delete">
                                    <i class="bi bi-x"></i>
                                </button>
                            </form>
                        </div>
                    <% } %>
                </div>
                <h4 class="card-title">
                    <%- item.title %>
                </h4>
                <p class="card-text"><%- item.content %></p>
            </div>
        </div>
    <% }) %>
</div>