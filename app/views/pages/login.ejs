<div class="container page">
    <form class="card p-4 user-form" method="POST" action="/login">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" aria-describedby="email" name="email"
                   value="<%- form.email %>">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" value="<%- form.password %>">
        </div>
        <div class="d-flex flex-column gap-2 justify-content-between w-100">
            <button type="submit" class="btn btn-primary">Login</button>
            <p class="text-black small mb-0 text-center">Doesn't have an account? <a href="/signup">Sign up</a></p>
        </div>
        <% if (hasError) { %>
            <div class="alert alert-danger">Invalid credentials</div>
        <% } %>
    </form>
</div>
