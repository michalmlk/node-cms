<div class="container login-page">
    <form class="card p-4">
        <div class="mb-3">
            <label for="login" class="form-label">Login</label>
            <input type="text" class="form-control" id="login" aria-describedby="login" name="login">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="d-flex flex-column gap-2 justify-content-between w-100">
            <button type="submit" class="btn btn-primary">Login</button>
            <p class="text-black small mb-0 text-center">Doesn't have an account? <a href="/signup">Sign up</a></p>
        </div>
    </form>
</div>
