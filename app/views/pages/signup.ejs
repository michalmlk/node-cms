<div class="container page">
    <form class="card p-4 user-form" method="POST" action="/signup" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control <%- errors?.email ? 'is-invalid' : '' %>" id="email"
                   aria-describedby="email" value="<%- form.email %>"
                   name="email"/>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control <%- errors?.password ? 'is-invalid' : '' %>" id="password"
                   value="<%- form.password %>" name="password"/>
        </div>
        <div class="mb-3">
            <label for="avatar" class="form-label">Avatar</label>
            <input type="file" class="form-control" id="avatar" name="avatar" accept="image/png">
        </div>
        <div class="d-flex flex-column gap-2 justify-content-between w-100">
            <button type="submit" class="btn btn-primary">Sign up</button>
            <p class="text-black small mb-0 text-center">Already have an account? <a href="/login">Log in</a></p>
        </div>
        <% if (errors && Object.keys(errors).length > 0) { %>
            <div class="alert alert-danger mt-4">
                <% for (const key in errors) { %>
                    <li><%= errors[key].message %></li>
                <% } %>
            </div>
        <% } %>
    </form>
</div>